<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFollowFragment">


    <ImageView
        android:id="@+id/iv_follow_login"
        android:layout_centerInParent="true"
        android:src="@drawable/attention_empty_login_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_above="@id/iv_follow_login"
        android:layout_marginBottom="20dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_content_empty"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:text="@string/follow_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />



</RelativeLayout>
