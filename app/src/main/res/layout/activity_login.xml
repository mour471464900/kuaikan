<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account_back_normal"
        android:onClick="back"
        />
    <TextView
        android:id="@+id/tv_enter_text"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="#000000"
        />
    <ImageView
        android:id="@+id/iv_enter_show"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_login_visible"
        />
    <LinearLayout
        android:id="@+id/ll_enter_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_enter_show"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@drawable/slt_enter"
        android:padding="10dp"
        >
    <EditText
        android:id="@+id/et_enter_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/slt_edtext"
        android:minEms="10"
        android:hint="支持中国大陆"
        android:drawablePadding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:padding="5dp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darker"
            />
    <EditText
        android:id="@+id/et_enter_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/slt_edtext2"
        android:clickable="false"
        android:minEms="10"
        android:hint="8-30位数字或英文"
        android:drawablePadding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:padding="5dp"
        />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ll_enter_show1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_enter_show"
        android:layout_centerHorizontal="true"
        android:background="@drawable/slt_button"
        android:layout_marginTop="20dp"

        >
    <TextView
        android:id="@+id/rt_enter_show"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="登录"

        android:textSize="20sp"
        android:minEms="10"
        android:textColor="#ffffff"
        android:gravity="center"
        />
</RelativeLayout>
    <TextView
        android:id="@+id/tv_enter_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:textSize="20sp"
        android:textColor="#8e0808"
        android:layout_below="@id/ll_enter_show1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_enter_show"
        android:layout_centerHorizontal="true"
        android:text="-- 其它方式登录 --"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_qq_pressed"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_weibo_pressed"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_login_weixin_pressed"
            />
    </LinearLayout>
</RelativeLayout>
