<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_pro_icon"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pro_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:text="君与望心"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <!--android:ellipsize="end"在结尾加上省略号-->
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/ic_me_follow" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pro_author"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="左小翎/夏天岛/+大仙/夏天岛"
            android:textColor="@color/darker_gray"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_pro_dianzan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_details_toolbar_praise_normal"
                android:text="5095"
                android:layout_marginRight="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tv_pro_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_home_comment_normal"
                android:text="1726"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>