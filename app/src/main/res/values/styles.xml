<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme. -->
    <style name="rb_top">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/color_rb_top</item>
        <item name="android:background">@drawable/sharp_rb_top</item>
    </style>
    <!--  这个是上下的内容-->
    <style name="LayoutMargin">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
<!--   这个是checkBox的-->
    <style name="custom_dianzhan" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/seletor_dianzhan</item>
    </style>

    <style name="custom_pinlun" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_pinlun</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!--解决自定义actionbar的时候，左边始终有一块填充不掉的问题-->
    <style name="ActionBarBaseStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>
</resources>
